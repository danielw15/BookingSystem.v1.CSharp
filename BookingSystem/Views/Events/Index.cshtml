@model BookingSystem.Models.EventUserViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<form asp-controller="Events" asp-action="Index" method="get">
    <p>
        User ID Filter
        <select asp-for="EventUser" asp-items="Model.UserIds">
            <option value="">All</option>
        </select>
        Title Search: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].getUserFullName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Events![0].Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Events![0].EndTime)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Events!) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                 @Html.DisplayFor(modelItem => item.Title)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.getUserFullName)
                </td>

            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
